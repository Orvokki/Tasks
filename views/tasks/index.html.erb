<h1>Listing tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Úloha</th>
      <th>Deadline</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks_undone.each do |task| %>
      <tr class="<%="danger" if task.hours_left < 0 %> <%="warning" if task.hours_left < 24 and task.hours_left > 0 %>">
        <td><%= task.name %></td>
        <td><%= task.deadline %></td>
        <td><%= task.done %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

